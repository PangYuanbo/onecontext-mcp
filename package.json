{
  "name": "@pangyuanbo/onecontext-mcp",
  "version": "0.1.1",
  "description": "OneContext MCP: Git-style context controller (GCC) + sharing Codex session segments as MCP resources",
  "license": "MIT",
  "author": "PangYuanbo",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "mcpName": "io.onecontext/server",
  "bin": {
    "onecontext-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod 755 dist/index.js",
    "lint": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint:check": "eslint \"src/**/*.{ts,js}\" --max-warnings 0",
    "format": "prettier --write .",
    "start": "node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PangYuanbo/onecontext-mcp.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "bugs": {
    "url": "https://github.com/PangYuanbo/onecontext-mcp/issues"
  },
  "homepage": "https://github.com/PangYuanbo/onecontext-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
